<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Mangas</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
        }
        
        /* Table Styles */
        .table-container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        
        .table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ddd;
        }
        
        .table th, .table td {
            border: none;
            padding: 12px;
            text-align: left;
        }
        
        .table th {
            background-color: #007bff;
            color: #ffffff;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid #ddd;
        }
        
        .table tr:hover {
            background-color: #f1f1f1;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        
        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        
        /* Manga Row Styles */
        .manga-row {
            transition: transform 0.2s;
        }
        
        .manga-row:hover {
            transform: scale(1.02);
            background-color: #e2e6ea;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        
        /* Availability Styles */
        .disponible {
            color: #28a745;
            font-weight: bold;
        }
        
        .no-disponible {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h1>Lista de Mangas</h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID Manga</th>
                    <th>Nombre del Manga</th>
                    <th>Autor</th>
                    <th>GÃ©nero</th>
                    <th>Precio</th>
                    <th>Disponibilidad</th>
                </tr>
            </thead>
            <tbody>
                <% mangas.forEach(function(manga) { %>
                    <tr class="manga-row">
                        <td><%= manga._id %></td>
                        <td><a href="/mangas/<%= manga.NomManga %>"><%= manga.NomManga %></a></td>
                        <td><%= manga.Autor %></td>
                        <td><%= manga.Genero %></td>
                        <td>$<%= manga.Precio %> .00 </td>
                        <td class="<%= manga.Disponibilidad === 'Disponible' ? 'disponible' : 'no-disponible' %>">
                            <%= manga.Disponibilidad %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (opcional, pero recomendado para algunas funcionalidades) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>